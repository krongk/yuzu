<div class="section row entries bg-primary section-no-margin-bottom">

  <article class="entry style-grid style-hero hero-sm-largest type-post col-sm-12 col-md-6 colheight-sm-1 colheight-md-2 colheight-lg-2 colheight-xl-2">
    
    <div class="ribbon ribbon-pulled ribbon-small ribbon-highlight">
      <a href="blog.html">足浴114</a>
    </div>

    <header class="entry-header">
      <h3 class="entry-title">足浴114上线公告 </h3>
      <div class="entry-meta">
        <span class="entry-date"><a href="blog.html"><time datetime="2013-07-04T23:26:34+00:00"><%= get_date(Admin::Channel.last.updated_at)%></time></a></span>
      </div>
    </header>

    <figure class="entry-thumbnail">

      <a href="single.html" class="overlay overlay-primary"></a>

      <!-- to disable lazy loading, remove data-src and data-src-retina -->
      <img src="/assets/shop/1.jpg" data-src="/assets/shop/1.jpg" data-src-retina="/assets/shop/1.jpg" width="680" height="452" alt="" style="opacity: 1;">

      <!--fallback for no javascript browsers-->
      <noscript>
        &lt;img src="/assets/680x452_2.jpg" alt=""&gt;
      </noscript>

    </figure>

  </article>
  <% index = 0 %>
  <% @channels.each do |channel| %>
    <% post = channel.pages.last %>
    <% next if post.nil? %>
    <% index += 1 %>
    <% next if index > 4 %>
    <article class="entry style-grid style-hero type-post col-md-6 col-lg-3 colheight-sm-1">
      
      <div class="ribbon ribbon-pulled ribbon-small ribbon-highlight">
        <%= link_to channel.title, channel_path(channel) %>
      </div>

      <header class="entry-header">
        <h3 class="entry-title">
          <%= link_to post.title, post_path(post) %>
          <small><%= link_to post.description, post_path(post) %></small>
        </h3>
        <div class="entry-meta">
          <span class="entry-date"><a href="blog.html"><time datetime="2013-07-04T23:26:34+00:00"><%= distance_of_time_in_words_to_now(post.updated_at) %>前</time></a></span>
        </div>
      </header>
      
      <figure class="entry-thumbnail">

        <%= link_to '', post_path(post), class: 'overlay overlay-primary'%>
        <!-- to disable lazy loading, remove data-src and data-src-retina -->
        <img src="<%= post.image_path %>" data-src="<%= post.image_path %>" data-src-retina="<%= post.image_path %>" width="480" height="280" alt="" style="opacity: 0.6;">

        <!--fallback for no javascript browsers-->
        <noscript>
          &lt;img src="<%= post.image_path %>" alt=""&gt;
        </noscript>

      </figure>

    </article>
  <% end %>
</div>

<div class="section content bg-base">
  
  <h2 class="section-title ribbon"><span>足疗足浴招聘信息</span></h2>
  
  <div class="entries">

    <div class="row">

      <% Job.recent(12).each do |job| %>
        <article class="entry type-post style-thumbnail-text col-sm-6 col-md-2 colheight-sm-1">
          
          <div class="entry-meta">
            <span class="category">
              <% if job.cate_id %>
                <%= link_to ApplicationHelper::JOB_CATES[job.cate_id], cate_jobs_path(job.cate_id) %>
              <% else %>
                <%#= link_to job., '#' %>
              <% end %>
            </span>
          </div>

          <h3 class="entry-title">
            <%= link_to job.title, job_path(job), rel: 'bookmark' %>
          </h3>
          <%= get_short_content(job.content, 60) %>
        </article>
      <% end %>

    </div><!--row.-->

  </div><!--entries.-->

</div><!-- bg-base end -->

<div class="section content bg-base">
  
  <h2 class="section-title ribbon"><span>足疗足浴商家信息</span></h2>
  
  <div class="entries">

    <div class="row">

      <% Shop.recent(12).each do |shop| %>
        <article class="entry type-post style-thumbnail-text col-sm-6 col-md-2 colheight-sm-1">
          
          <div class="entry-meta">
            <span class="category">
              <% if shop.city %>
                <%= link_to shop.city.name, '#' %>
              <% else %>
                <%= link_to shop.detail_address, '#' %>
              <% end %>
            </span>
          </div>

          <h3 class="entry-title">
            <%= link_to shop.title, shop_path(shop), rel: 'bookmark' %>
          </h3>
          <%= get_short_content(shop.content, 60) %>
        </article>
      <% end %>

    </div><!--row.-->

  </div><!--entries.-->

</div><!-- bg-base end -->
