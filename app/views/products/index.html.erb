<h1><%= @cate_name %></h1>

<table>
  <thead>
    <tr>
      <th>标题</th>
      <th>联系电话</th>
      <th>地址</th>
      <th>内容</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.title, product %></td>
        <td><%= product.mobile_phone %></td>
        <td><%= product.region.try(:name) %><%= product.city.try(:name) %><%= product.district.try(:name) %><%= product.detail_address %></td>

        <td><%= get_short_content(product.content) %></td>
        <% if user_signed_in? && current_user.id == product.user_id %>
          <td><%= link_to '修改', edit_product_path(product) %></td>
          <td><%= link_to '删除', product, method: :delete, data: { confirm: '删除以后无法恢复，确定要删除吗?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to '我要发布企业信息', new_product_path(cate_id: ApplicationHelper::PRODUCT_CATES.index(@cate_name)), class: 'btn btn-primary' %>
