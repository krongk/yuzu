<!--=========S tart About your self section===================================-->
<div class="row">
  <div class="col-md-3 text-center">
    <% if @resume.sex %>
      <img src="/themes/vcard/assets/avatar-boy.png" alt="avatar" class="img-responsive img-profile">
    <% else %>
      <img src="/themes/vcard/assets/avatar-girl.png" alt="avatar" class="img-responsive img-profile">
    <% end %>
  </div>
  <div class="col-md-9">
    <div class="mini-desc">
      <h2 class="title">
        你好，我是<%= @resume.name %>
      </h2>
      <p>
        <%= simple_format @resume.content %>
      </p>
    </div>
  </div>
</div>
