<div class="deviter">
</div>
<div class="row">
  <div class="col-md-6">
    <h3 class="title with-icon">
      <i class="fa fa-credit-card icn-title">
      </i>
      联系信息
    </h3>
    <div class="identity-area">
      <div class="row">
        <div class="col-sm-4">
          <label>
            性别
          </label>
        </div>
        <div class="col-sm-8">
          <%= @resume.sex_name %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <label>
            年龄
          </label>
        </div>
        <div class="col-sm-8">
          <%= @resume.age %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <label>
            教育经历
          </label>
        </div>
        <div class="col-sm-8">
          <%= @resume.education %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <label>
            工作年限
          </label>
        </div>
        <div class="col-sm-8">
          <%= @resume.work_year %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <label>
            联系电话
          </label>
        </div>
        <div class="col-sm-8">
          <%= show_mobile_phone(@user.mobile_phone) %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <label>
            电子邮箱
          </label>
        </div>
        <div class="col-sm-8">
          <%= show_email(@user.email) %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <label>
            地址
          </label>
        </div>
        <div class="col-sm-8">
          <%= show_region(@resume) %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <h3 class="title with-icon">
      <i class="fa fa-bell-o icn-title">
      </i>
      技能
    </h3>
    <div class="box-block">
      <ul class="list-unstyled list-strip">
        <li>
          <i class="fa fa-check">
          </i>
          保健按摩
        </li>
        <li>
          <i class="fa fa-check">
          </i>
